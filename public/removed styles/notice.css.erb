/* =Notice
----------------------------------------------- */
/* Main notice */
.notice,
.notice_perm {
    background: #575757 url(<%= asset_path "icon_info.png" %>) no-repeat 10px 13px;
    color: #fff;
}

/* Notice info */
.notice.info,
.notice_perm.info {
    background: #575757 url(<%= asset_path "icon_info.png" %>) no-repeat 10px 13px;
    color: #fff;
}

    .notice.info a,
    .notice_perm.info a {
        color: #e3bb00;
    }

/* Notice warning */
.notice.warning,
.notice_perm.warning {
    background: #e3bb00 url(<%= asset_path "icon_warning.png" %>) no-repeat 10px 13px;
    color: #000;
}

/* Notice error */
.notice.error,
.notice_perm.error {
    background: #e36500 url(<%= asset_path "icon_warning.png" %>) no-repeat 10px 13px;
    color: #fff;
}

    .notice strong,
    .notice_perm strong {
        font-size: 14px;
        font-weight: bold;
    }

    .notice em,
    .notice_perm em {
        font-weight: bold;
        font-style: normal;
    }
