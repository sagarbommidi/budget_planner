<div class="modal overlay" id="myModal" role="dialog" aria-labelledby="myModalLabel" style="display: none;">
  <div class="banner"></div>
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
    <h3 class="myModalLabel">Add <%= @component.class %></h3>
  </div>
  <%= form_for [@user, @component], :html => {:class => "form-horizontal"} do |f| %>
    <div class="modal-body">
      <div class="control-group">
        <%= f.label :amount, "Amount", :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :amount, :placeholder => "100.00", :id => "component-amount" %>
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="tag_names">Tags</label>
        <div class="controls">
          <%= text_field_tag :tag_names, nil, :placeholder => "Tag Name" %>
          <span class="help-inline"></span>
        </div>
      </div>
      <% unless @user.tags.blank? %>
        <div class="control-group tag-list" id="tag-list">
          <ul>
            <% @user.tags.each do |tag| %>
              <li name-attr='<%= tag.name %>'><%= tag.name %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="control-group">
        <label class="control-label" for="date">Date</label>
        <div class="controls">
          <%= f.text_field :generated_date, :value => I18n.localize(@component.generated_date, :format => "%d/%I/%Y"), :class => "date-field uneditable-input" %>
          <span class="help-inline"></span>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, "Description", :class => "control-label" %>
        <div class="controls">
          <%= f.text_area :description, :rows => 3, :placeholder => "Sample Description", :id => "component-description" %>
          <span class="help-inline"></span>
        </div>
      </div>
    </div>
    <div class="control-group buttons pull-right">
      <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
      <%= f.submit "Add #{@component.class}", :class => "btn btn-primary", :id => "add-component-btn" %>
    </div>
  <% end %>
</div>

<%= javascript_tag do %>
  window.userTags = "<%= @user.tag_names %>";
<% end %>
