<div class="title-container">
  <h3>Your Total Income : <%= current_user.incomes.sum(&:amount) %></h3>
</div>
<div>  
  <a href="#myModal" data-toggle="modal" class="btn btn-info"><span>+</span> Add Income</a>
</div>

<hr/>

<div>
  <a href="javascript:void(0)" id="timeline-btn" class="btn btn-info">Timeline</a>
  <a href="javascript:void(0)" id='tags-btn' class="btn btn-info">Tags</a>
</div>

<div id="timeline-container">
  <%= render_cell :timeline, :index, :user => current_user, :component => "incomes" %>
</div>

<div id="tags-container" style="display: none;">
  <%= render_cell :tag, :index, :user => current_user, :component => "incomes" %>
</div>

<% content_for :popup do %>
  <%= render_cell :component, :new, :user => current_user, :component => "incomes" %>
<% end %>