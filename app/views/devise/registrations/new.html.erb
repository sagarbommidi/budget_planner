
<div class="session-form">
  <h2>Create your account</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'clearfix', :id => "auth-form"}) do |f| %>

    <%= devise_error_messages! %>
    
    <div class="input">
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "username-field" %>
    </div>
    <div class="input">
      <%= f.password_field :password, :placeholder => "Password", :class => "password-field" %>
    </div>
    <div class="input">
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation", :class => "password-field" %>
    </div>

    <div class="actions clearfix">
      <span class="login-checkbox">
        <input id="Field" name="Field" type="checkbox" class="field login-checkbox">
        <label class="choice" for="Field">I have read and agree with the Terms of Use.</label>
      </span>
      <%= f.submit "Sign up", :class => "btn btn-green pull-right mtopm25" %>
    </div>
  <% end %>
</div>

<p class="note">Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
<p class="note"><%= link_to "Forgot your password?", new_password_path(resource_name) %> </p>