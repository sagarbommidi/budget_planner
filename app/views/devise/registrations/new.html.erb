
<div class="session-form">
  <h2>Create new account</h2>
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'clearfix', :id => "auth-form"}) do |f| %>

    <%= devise_error_messages! %>
    
    <div class="input">
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email" %>
    </div>
    <div class="input">
      <%= f.password_field :password, :placeholder => "Password" %>
    </div>
    <div class="input">
      <%= f.password_field :password_confirmation, :placeholder => "Password Confirmation" %>
    </div>

    <div class="actions clearfix">
      <%= f.submit "Sign up", :class => "btn btn-green" %>
    </div>
  <% end %>
</div>

<p class="note">Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %></p>
<p class="note"><%= link_to "Forgot your password?", new_password_path(resource_name) %> </p>