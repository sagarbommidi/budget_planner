
<div class="session-form">
  <h2>Forgot your password?</h2>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:class => 'clearfix', :id => "auth-form"}) do |f| %>
    
    <%= devise_error_messages! %>

    <div class="input">
      <%= f.email_field :email, :autofocus => true, :placeholder => "Email", :class => "username-field" %>
    </div>

    <div class="actions clearfix">
      <%= f.submit "Submit", :class => "btn btn-green" %>
    </div>
  <% end %>
</div>

<p class="note">Don't you have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
<p class="note">Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %> </p>