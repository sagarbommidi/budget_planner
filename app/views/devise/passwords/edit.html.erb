
<div class="session-form">
  <h2>Change your password</h2>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put, :class => 'clearfix', :id => "auth-form"}) do |f| %>
    
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="input">
      <%= f.password_field :password, :autofocus => true, :placeholder => "New Password" %>
    </div>

    <div class="input">
      <%= f.password_field :password_confirmation, :autofocus => true, :placeholder => "Confirm new Password" %>
    </div>

    <div class="actions clearfix">
      <%= f.submit "Submit", :class => "btn btn-green" %>
    </div>
  <% end %>
</div>

<p class="note">Don't you have an account? <%= link_to "Sign up", new_registration_path(resource_name) %></p>
<p class="note">Already have an account? <%= link_to "Sign in", new_session_path(resource_name) %> </p>